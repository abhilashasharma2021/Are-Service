<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/tx"
                    android:text="@string/register"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/robotoslabbold"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoslabmedium"
                    android:id="@+id/txSignIn"
                    android:layout_marginTop="3dp"
                    android:text="@string/create_new_account"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSignUpPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="10dp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    app:hintEnabled="false">

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/user_name"
                        android:textColorHint="@color/grey"
                        android:textSize="13sp"
                        android:maxLength="80"
                        android:fontFamily="@font/robotoslabregular"
                        android:singleLine="true"
                        android:drawableTint="@color/grey"
                        android:drawableStart="@drawable/user"
                        android:drawablePadding="2dp"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/user" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="10dp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    app:hintEnabled="false">

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:textColorHint="@color/grey"
                        android:textSize="13sp"
                        android:fontFamily="@font/robotoslabregular"
                        android:singleLine="true"
                        android:maxLength="80"
                        android:inputType="textEmailAddress"
                        android:drawableTint="@color/grey"
                        android:drawableStart="@drawable/email"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/email" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="10dp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    app:hintEnabled="false">

                    <EditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/mobile_number"
                        android:textColorHint="@color/grey"
                        android:textSize="13sp"
                        android:fontFamily="@font/robotoslabregular"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:inputType="number"
                        android:drawableTint="@color/grey"
                        android:drawableStart="@drawable/mobile"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/mobile" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="10dp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:fontFamily="@font/robotoslabregular"
                        android:textColorHint="@color/grey"
                        android:textSize="13sp"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:drawableTint="@color/grey"
                        android:drawableStart="@drawable/pass"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/pass" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginLeft="10dp"
                    app:boxBackgroundColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false">

                    <EditText
                        android:id="@+id/etCPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password"
                        android:fontFamily="@font/robotoslabregular"
                        android:textColorHint="@color/grey"
                        android:textSize="13sp"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:drawableTint="@color/grey"
                        android:drawableStart="@drawable/pass"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/pass" />

                </com.google.android.material.textfield.TextInputLayout>





                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/card1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:id="@+id/btnSignUp"
                    android:visibility="visible"
                    android:fontFamily="@font/robotoslabbold"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/purple_200"
                    android:text="@string/register"
                    app:cornerRadius="2dp">


                </com.google.android.material.button.MaterialButton>

                <TextView
                    android:id="@+id/txtAlredy"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:text="@string/already_ac"
                    android:fontFamily="@font/robotoslabbold"
                    android:textSize="13sp" />


            </LinearLayout>





        </LinearLayout>


    </ScrollView>
</RelativeLayout>